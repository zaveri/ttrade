<body onload="setupZoom()">
<head>
    <title>Tee-Trade</title>
  
    <%= stylesheet_link_tag 'style' %>
    <%= stylesheet_link_tag 'header' %>
    <%= stylesheet_link_tag 'application' %>
    <%= stylesheet_link_tag 'forms' %>
    <%= stylesheet_link_tag 'profile' %>

    <%= javascript_include_tag :defaults %>

</head>
<div id="container">
    <div id ="header" class="clearfix">
	<%= link_to "Shirt", shirts_path %>
	<div class="validation">
		  <ul>
		    <% if current_user.blank? %>
		      <li class="login"><%= link_to "Sign Up", signup_path() %></li>
		    |
		      <li class="login"><%= link_to "Sign In", login_path() %></li>
		    <% else %>
		      <%= link_to current_user.login, profile_path(current_user.profile) %>
		      |
		      <li class="login"><%= link_to "Sign Out", logout_path() %></li>
		    <% end  %>
		  </ul>
	<!--
	<% if current_user %>
	<%= link_to current_user.login, profile_path(current_user.profile) %>
	<% end %>
	-->
	</div>
    </div>
    <div id="content" class="clearfix">
	<h3 id="our_shirts">Our shirts</h3>
	<div id="content_body" class="clearfix">
	    <!--<%= render :partial => "layouts/mailbox_list" if logged_in? %> -->
	    <%= flash_messages %>
	    <%= yield %>
	</div>
    </div>
    <div id="footer">
        <p class="footerlinks">
          <%= link_to "About", :controller => 'about' %>
          |
          <%= link_to "Blog", :controller => 'blog' %>
          |
          <%= link_to "Contact", :controller => 'contact' %>
          |
          <%= link_to "Privacy", :controller => 'privacy' %>
          |
          <%= link_to "Terms", :controller => 'terms' %>
        </p>
    </div>
</div>
</body>
