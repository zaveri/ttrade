<h3>	<%= link_to "Add a Shirt!", new_shirt_path, :class => 'add_shirt' %></h3>
<br/>
<br/>
<% @shirts.each do |shirt| %>
<div class="thumbnail">
<%= link_to ((image_tag shirt.front.url(:thumb)), shirt) %>
</div>
<% end %>


<div class="size_list">	
	<% form_tag filter_by_size_shirts_path do -%>
	<ul>
	   	<% @sizes.each do |size| %>
	   		<%= size_list_item(size, @selected_sizes) %>
	   	<% end %>	
	</ul>	
	<div id="filter_by_size"><%= submit_tag 'Filter' %></div>
  <% end %>
<%= will_paginate @shirts, :class => 'paginate' %>
</div>